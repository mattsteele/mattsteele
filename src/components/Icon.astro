---
import type { HTMLAttributes } from "astro/types";

interface Props {
	icon: string;
	color?: string;
	gradient?: boolean;
	size?: string;
}

const { color = "currentcolor", gradient, icon, size } = Astro.props;

const attrs: HTMLAttributes<"svg"> = {};
if (size) attrs.style = { "--size": size };

const gradientId =
	"icon-gradient-" + Math.round(Math.random() * 10e12).toString(36);
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	width="40"
	height="40"
	viewBox="0 0 256 256"
	aria-hidden="true"
	stroke={gradient ? `url(#${gradientId})` : color}
	fill={gradient ? `url(#${gradientId})` : color}
	{...attrs}
>
	<g>{icon}</g>
	{
		gradient && (
			<linearGradient
				id={gradientId}
				x1="23"
				x2="235"
				y1="43"
				y2="202"
				gradientUnits="userSpaceOnUse"
			>
				<stop stop-color="var(--color-white)" />
				<stop offset=".5" stop-color="var(--color-white)" />
				<stop offset="1" stop-color="var(--color-white)" />
			</linearGradient>
		)
	}
</svg>
